<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop_dong.form</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="ten" class="oe_edit_only" string="Tên hợp đồng"/>
                            <h1><field name="ten" placeholder="Ví dụ: Hợp đồng phần mềm..."/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="khach_hang_id"/>
                                <field name="gia_tri_hop_dong" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop_dong.tree</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <tree decoration-info="trang_thai == 'moi'" 
                      decoration-success="trang_thai == 'hoan_thanh'" 
                      decoration-danger="trang_thai == 'huy'">
                    <field name="ten"/>
                    <field name="khach_hang_id"/>
                    <field name="gia_tri_hop_dong" widget="monetary" sum="Tổng giá trị"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="trang_thai" widget="badge" 
                           decoration-info="trang_thai == 'moi'" 
                           decoration-success="trang_thai == 'hoan_thanh'" 
                           decoration-danger="trang_thai == 'huy'"/>
                </tree>
            </field>
        </record>

        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop_dong</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>