<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_noi_bo_form" model="ir.ui.view">
            <field name="name">van_ban_noi_bo.form</field>
            <field name="model">van_ban_noi_bo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px; font-weight:bold;">Văn bản nội bộ</div>
                        
                        <group string="Thông tin chung">
                            <group col="2">
                                <field name="ma"/>
                                <field name="thoi_gian"/>
                                <field name="nguoi_gui"/>
                            </group>
                            <group col="2">
                                <field name="nguoi_nhan"/>
                                <field name="mo_ta"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Nội dung văn bản" name="view_file">
                                <group>
                                    <field name="file_dinh_kem" 
                                           widget="pdf_viewer" 
                                           string="Xem trực tiếp (PDF)"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_van_ban_noi_bo_tree" model="ir.ui.view">
            <field name="name">van_ban_noi_bo.tree</field>
            <field name="model">van_ban_noi_bo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma"/>
                    <field name="thoi_gian"/>
                    <field name="nguoi_gui"/>
                    <field name="nguoi_nhan"/>
                    <field name="mo_ta"/>
                    <field name="file_dinh_kem" widget="binary" filename="ma" string="Tải file"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="van_ban_noi_bo_search">
            <field name="model">van_ban_noi_bo</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma"/>
                    <field name="nguoi_gui"/>
                    <field name="nguoi_nhan"/>
                    <group expand="0" string="Gom nhóm theo">
                        <filter string="Người gửi" name="group_sender" context="{'group_by': 'nguoi_gui'}"/>
                        <filter string="Người nhận" name="group_receiver" context="{'group_by': 'nguoi_nhan'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_van_ban_noi_bo" model="ir.actions.act_window">
            <field name="name">Văn bản nội bộ</field>
            <field name="res_model">van_ban_noi_bo</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="van_ban_noi_bo_search"/>
        </record>
    </data>
</odoo>