<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_den_form" model="ir.ui.view">
            <field name="name">van_ban_den.form</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px; font-weight:bold;">Văn bản đến</div>
                        
                        <group string="Thông tin chung">
                            <group col="2">
                                <field name="ma"/>
                                <field name="thoi_gian"/>
                                <field name="nguoi_gui"/>
                            </group>
                            <group col="2">
                                <field name="ky_xac_nhan"/>
                                <field name="han"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Nội dung văn bản" name="view_file">
                                <group>
                                    <field name="file_dinh_kem" 
                                           widget="pdf_viewer" 
                                           string="Xem nội dung (PDF)"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_van_ban_den_tree" model="ir.ui.view">
            <field name="name">van_ban_den.tree</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma"/>
                    <field name="thoi_gian"/>
                    <field name="nguoi_gui"/>
                    <field name="ky_xac_nhan"/>
                    <field name="han"/>
                    <field name="file_dinh_kem" widget="binary" filename="ma" string="Tải file"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="van_ban_den_search">
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma"/>
                    <field name="nguoi_gui"/>
                    <field name="ky_xac_nhan"/>
                </search>
            </field>
        </record>

        <record id="action_van_ban_den" model="ir.actions.act_window">
            <field name="name">Văn bản đến</field>
            <field name="res_model">van_ban_den</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="van_ban_den_search"/>
        </record>
    </data>
</odoo>