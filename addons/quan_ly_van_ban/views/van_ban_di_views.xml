<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_di_form" model="ir.ui.view">
            <field name="name">van_ban_di.form</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px; font-weight:bold;">Văn bản đi</div>
                        
                        <group string="Thông tin chung">
                            <group col="2">
                                <field name="ma"/>
                                <field name="thoi_gian"/>
                                <field name="nguoi_nhan"/>
                            </group>
                            <group col="2">
                                <field name="hinh_thuc"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Nội dung văn bản" name="view_file">
                                <group>
                                    <field name="file_dinh_kem" 
                                           widget="pdf_viewer" 
                                           string="Xem nội dung (PDF)"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_van_ban_di_tree" model="ir.ui.view">
            <field name="name">van_ban_di.tree</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma"/>
                    <field name="thoi_gian"/>
                    <field name="nguoi_nhan"/>
                    <field name="hinh_thuc"/>
                    <field name="file_dinh_kem" widget="binary" filename="ma" string="Tải file"/>
                    <field name="trang_thai" widget="badge" decoration-info="trang_thai == 'moi'"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="van_ban_di_search">
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma"/>
                    <field name="nguoi_nhan"/>
                    <field name="hinh_thuc"/>
                    <field name="trang_thai"/>
                    <group expand="0" string="Gom nhóm theo">
                        <filter string="Trạng thái" name="group_status" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Hình thức" name="group_type" context="{'group_by': 'hinh_thuc'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_van_ban_di" model="ir.actions.act_window">
            <field name="name">Văn bản đi</field>
            <field name="res_model">van_ban_di</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="van_ban_di_search"/>
        </record>
    </data>
</odoo>