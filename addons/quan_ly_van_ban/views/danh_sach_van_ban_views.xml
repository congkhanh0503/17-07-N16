<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_danh_sach_van_ban_form" model="ir.ui.view">
            <field name="name">danh_sach_van_ban.form</field>
            <field name="model">danh_sach_van_ban</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="ten" class="oe_edit_only" string="Tên văn bản"/>
                            <h1><field name="ten" placeholder="Nhập tên văn bản..."/></h1>
                        </div>
                        <group string="Thông tin chung">
                            <group>
                                <field name="ma"/>
                                <field name="loai_van_ban_id" options="{'no_create': True}"/>
                                <field name="khach_hang_id"/>
                            </group>
                            <group>
                                <field name="nhan_vien_phu_trach_id"/>
                                <field name="thoi_gian"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Xem trước PDF" name="view_file">
                                <field name="file_dinh_kem" widget="pdf_viewer" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_danh_sach_van_ban_tree" model="ir.ui.view">
            <field name="name">danh_sach_van_ban.tree</field>
            <field name="model">danh_sach_van_ban</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma"/>
                    <field name="ten"/>
                    <field name="khach_hang_id"/> 
                    <field name="loai_van_ban_id"/>
                    <field name="file_name" invisible="1"/>
                    <field name="file_dinh_kem" widget="binary" filename="file_name" string="Tải về"/>
                    <field name="nhan_vien_phu_trach_id"/>
                    <field name="thoi_gian"/>
                    <field name="trang_thai" widget="badge" decoration-success="trang_thai == 'active'"/>
                </tree>
            </field>
        </record>

        <record id="action_danh_sach_van_ban" model="ir.actions.act_window">
            <field name="name">Danh sách văn bản</field>
            <field name="res_model">danh_sach_van_ban</field>
            <field name="view_mode">tree,form</field>
        </record>

        
    </data>
</odoo>