<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM VIEW -->
        <record id="view_bang_luong_form" model="ir.ui.view">
            <field name="name">bang_luong.form</field>
            <field name="model">bang_luong</field>
            <field name="arch" type="xml">
                <form string="Bảng lương">
                    <sheet>
                        <div class="oe_title">
                            <h1>Bảng lương</h1>
                        </div>

                        <group col="2">
                            <group string="Thông tin chung">
                                <field name="nhan_vien_id"/>
                                <field name="thang"/>
                                <field name="nam"/>
                            </group>

                            <group string="Thu nhập">
                                <field name="luong_co_ban"/>
                                <field name="so_ngay_cong" readonly="1"/>
                                <field name="phat" readonly="1"/>
                                <field name="luong_thuc_nhan" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_bang_luong_tree" model="ir.ui.view">
            <field name="name">bang_luong.tree</field>
            <field name="model">bang_luong</field>
            <field name="arch" type="xml">
                <tree string="Danh sách bảng lương">
                    <field name="nhan_vien_id"/>
                    <field name="thang"/>
                    <field name="nam"/>
                    <field name="so_ngay_cong"/>
                    <field name="phat"/>
                    <field name="luong_thuc_nhan"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_bang_luong" model="ir.actions.act_window">
            <field name="name">Bảng lương</field>
            <field name="res_model">bang_luong</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
